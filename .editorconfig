; .editorconfig

root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.{js,json}]
bin=node
indent_style = space
indent_size = 4
brace_style = expand

[**.jsx]
e4x = true
indent_style = space
indent_size = 4

[*.{less,css}]
indent_style = space
indent_size = 4
brace_style = collapse

[**.html]
indent_style = space
indent_size = 2
max_char = 78
brace_style = expand

[*.php]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
