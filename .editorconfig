; .editorconfig

root = true

[**.js]
path=~/.config/nvim/bundle/js-beautify/js/lib/beautify.js
bin=node
indent_style = space
indent_size = 4
brace_style = expand

[**.jsx]
e4x = true
indent_style = space
indent_size = 4

[**.css]
path=~/.config/nvim/bundle/js-beautify/js/lib/beautify-css.js
indent_style = space
indent_size = 4
brace_style = collapse

[**.html]
path=~/.config/nvim/bundle/js-beautify/js/lib/beautify-html.js
indent_style = space
indent_size = 4
max_char = 78
brace_style = expand
